{% extends 'lpdwSearchEngineBundle::layout.html.twig' %}

{% block body %}
    {{ parent() }}

    <div class="container-fluid">
        <div class="row">
            <div class="chooseCategory">
                <div class="content">
                    <div class="text-center stepsNumber white">
                        <div><span class="ft-30">1</span></div>
                        <div class="line"></div>
                        <div id="step2"><span class="ft-30">2</span></div>
                    </div>

                    <h2 class="fontTitle ft-40 lightBlue">Choisissez une <span class="darkBlue">catégorie</span></h2>
                    <p class="white">
                        Cliquez sur la catégorie pour laquelle vous souhaitez effectuer votre recherche.
                    </p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="everyCategories col-md-12 col-sm-12">
               <div id="grid" data-columns>
                   {% set i = 0 %}
                   {% for category in categories %}
                       <a href="{{ path('generateForm', {'name': category.name}) }}">
                           <div class="grid-item text-center {{ i is divisible by(2) ? 'bgDarkBlue' : 'bgLightBlue' }}">
                               <div class="w100 ft-20">{{ category.name }}</div><br/>
                           </div>
                       </a>
                       {% set i = i + 1 %}
                   {% endfor %}
                </div>
           </div>
        </div>
    </div>
{% endblock %}
