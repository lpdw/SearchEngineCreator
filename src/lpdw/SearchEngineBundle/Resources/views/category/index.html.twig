{% extends 'lpdwSearchEngineBundle::layout.html.twig' %}

{% block body %}
    {{ parent() }}

    <div class="container">

        <div class="row">
            <h2 class="fontTitle ft-40 lightBlue">1. Choisissez une <span class="darkBlue">cat√©gorie</span></h2>
        </div>

        <div class="col-md-12 col-sm-12">
           <div class="grid">
               {% set i = 0 %}
               {% for category in categories %}

               <a href="{{ path('searchEngine_category_show', { 'id': category.id }) }}">
                   <div class="grid-item visible text-center {{ i is divisible by(2) ? 'bgDarkBlue' : 'bgLightBlue' }}" data-cat="grande-salle">
                        <a href="{{ path('searchEngine_element_new', { 'name': category.name }) }}">Create a new Element</a>
                        <a href="{{ path('searchEngine_feature_new', { 'name': category.name }) }}">Create a new Feature</a>
                        <div class="w100">{{ category.name }}</div><br/>
                        <div class="gutter-sizer"></div>
                   </div>
               </a>

               {% set i = i + 1 %}
               {% endfor %}
           </div>
       </div>


    </div>
{% endblock %}
