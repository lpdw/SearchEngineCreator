{% extends 'lpdwSearchEngineBundle::layout.html.twig' %}

{% block body %}

    {{ parent() }}

    <div class="container-fluid">

        <div class="row">
            <div class="chooseCategory">
                <div class="content">
                    <h2 class="fontTitle ft-40 lightBlue">Editez les caractéristiques de l'élément <span class="darkBlue">{{ element.name }}</span></h2>
                    <p class="white">
                        Définissez les caractéristiques de l'élément {{ element.name }}.
                    </p>
                    <p class="white">
                        C'est grâce à ces caractéristiques que le moteur de recherche pourra par la suite identifier l'élément {{ element.name }}.
                    </p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="everyCategories col-md-12 col-sm-12 mTop30">
                {{ form_start(edit_form, { 'attr' : {'class':'formStyle'}}) }}
                    {{ form_widget(edit_form) }}
                    <input class="buttonStyle mTop20 ft-20 fontChampagne" type="submit" value="Editer les valeurs" />
                {{ form_end(edit_form) }}
                <a class="buttonStyle mTop20 ft-20 fontChampagne" href="{{ path('searchEngine_element_index', { 'category_name' : category }) }}">Retour à la liste des éléments</a>
           </div>
        </div>
    </div>

{% endblock %}
