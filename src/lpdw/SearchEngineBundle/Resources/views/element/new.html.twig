{% extends 'lpdwSearchEngineBundle::layout.html.twig' %}

{% block body %}

    {{ parent() }}

    <div class="container-fluid">

        <div class="row">
            <div class="chooseCategory">
                <div class="content">

                    <h2 class="fontTitle ft-40 lightBlue">Créer un nouvel élément pour la catégorie <span class="darkBlue">{{ category.name }}</span></h2>
                    <p class="white">
                        Ajoutez un nouvel élément à la catégorie {{ category.name }} en lui renseignant simplement un nom.
                    </p>
                    <p class="white">
                        Vous pouvez également ajouter un commentaire et une image pour apporter des précisions sur ce nouvel élément.
                    </p>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="everyCategories col-md-12 col-sm-12 mTop30">
                {{ form_start(form, { 'attr' : { 'class' : 'formStyle' }}) }}
                    {{ form_widget(form) }}
                    <input class="buttonStyle mTop20 ft-20 fontChampagne" type="submit" value="Créer l'élément" />
                {{ form_end(form) }}
                <a class="buttonStyle mTop20 ft-20 fontChampagne" href="{{ path('searchEngine_element_index', { 'category_name' : category.name }) }}">Retour à la liste des éléments</a>
           </div>
        </div>

    </div>

{% endblock %}
