{% extends 'lpdwSearchEngineBundle::layout.html.twig' %}

{% block body %}

    {{ parent() }}

    <div class="container-fluid">

        <div class="row">
            <div class="chooseCategory">
                <div class="content">

                    <h2 class="fontTitle ft-40 lightBlue">Créer une nouvelle caractéristique pour la catégorie <span class="darkBlue">{{ category.name }}</span></h2>
                    <p class="white">
                        Remplissez ce formulaire pour créer un nouveau critère de recherche à la catégorie {{ category.name }}.
                    </p>
                    <p class="white">
                        Ce critère apparaîtra alors dans le formulaire de recherche de la page d'accueil et permettra d'affiner les recherches d'éléments.
                    </p>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="everyCategories col-md-12 col-sm-12 mTop30">
                {% if erreur_name is defined %}
                  <p style="color:red;">{{erreur_name}}</p>
                {% endif %}
                {{ form_start(form, { 'attr' : { 'class' : 'formStyle' }}, {'multipart': 'true'}) }}
                    {{ form_widget(form) }}
                    {% if erreur_radio is defined %}
                      <p style="color:red;">{{erreur_radio}}</p>
                    {% endif %}
                    <div id="addInput"></div>
                    <input class="buttonStyle mTop20 ft-20 fontChampagne" type="submit" value="Ajouter la caractéristique" />
                {{ form_end(form) }}
                <a class="buttonStyle mTop20 ft-20 fontChampagne" href="{{ path('searchEngine_category_index') }}">Retour à la liste des catégories</a>
           </div>
        </div>


{% endblock %}
